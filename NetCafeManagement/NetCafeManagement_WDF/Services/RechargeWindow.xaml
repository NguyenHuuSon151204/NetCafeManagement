<Window x:Class="NetCafeManagement_WDF.Views.RechargeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Nạp tiền cho khách" Height="200" Width="300" WindowStartupLocation="CenterScreen">
    <StackPanel Margin="20">
        <TextBlock Text="Nhập số tiền cần nạp:" Margin="0,0,0,10"/>
        <TextBox x:Name="AmountBox" Margin="0,0,0,10"/>
        <Button Content="✅ Xác nhận" Width="120" HorizontalAlignment="Center" Click="Confirm_Click"/>
    </StackPanel>
</Window>
