<Window x:Class="NetCafeManagement_WDF.StaffDashboardView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Staff Dashboard"
        Height="720" Width="1280"
        WindowStartupLocation="CenterScreen"
        Background="#FF1E1E2F"
        WindowStyle="None">

    <Grid>
        <!-- Sidebar -->
        <Grid Width="220" Background="#FF2B2B40" HorizontalAlignment="Left">
            <StackPanel Margin="0,20,0,0">
                <TextBlock Text="STAFF PANEL"
                   FontSize="20"
                   FontWeight="Bold"
                   Foreground="White"
                   HorizontalAlignment="Center"
                   Margin="0,10"/>

                <Button x:Name="BtnViewComputers" 
                Content="🖥️ Máy trống/Sử dụng"
                Style="{StaticResource GlassButton}"
                Margin="10,20,10,5"
                Height="45"
                Click="BtnViewComputers_Click"/>

                <Button x:Name="BtnStartSession"
                Content="➕ Bắt đầu phiên"
                Style="{StaticResource GlassButton}"
                Margin="10,5"
                Height="45"
                Click="BtnStartSession_Click"/>

                <Button x:Name="BtnOrderFood"
                Content="🍔 Gọi món"
                Style="{StaticResource GlassButton}"
                Margin="10,5"
                Height="45"
                Click="BtnOrderFood_Click"/>

                <Button x:Name="BtnRecharge"
                Content="💰 Nạp tiền"
                Style="{StaticResource GlassButton}"
                Margin="130,5"
                Height="45"
                Click="BtnRecharge_Click"/>

                <Button x:Name="BtnEndSession"
                Content="🔚 Kết thúc phiên"
                Style="{StaticResource GlassButton}"
                Margin="10,5"
                Height="45"
                Click="BtnEndSession_Click"/>

                <Button x:Name="BtnLogout"
                Content="🚪 Đăng xuất"
                Style="{StaticResource GlassButton}"
                Margin="10,40,10,0"
                Height="40"
                Click="Logout_Click"/>
            </StackPanel>
        </Grid>


        <!-- Main Content Area -->
        <Grid x:Name="MainContentArea" Margin="220,0,0,0">
            <Border Background="#20FFFFFF"
                    CornerRadius="20"
                    Padding="20"
                    Margin="20">
                <Border.Effect>
                    <DropShadowEffect Color="Black"
                                      Direction="270"
                                      ShadowDepth="5"
                                      BlurRadius="15"
                                      Opacity="0.2"/>
                </Border.Effect>
                <TextBlock Text="Chào mừng nhân viên! Hãy chọn chức năng bên trái."
                           FontSize="22"
                           Foreground="White"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"
                           TextWrapping="Wrap"
                           TextAlignment="Center"/>
            </Border>
        </Grid>
    </Grid>
</Window>
