<Window x:Class="NetCafeManagement_WDF.AdminControl.AddServiceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Thêm Dịch Vụ"
        Height="300" Width="400"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Thêm dịch vụ mới" FontSize="18" FontWeight="Bold" Margin="0,0,0,20"/>

        <StackPanel Grid.Row="1" VerticalAlignment="Top" Margin="0,10,0,0">
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock Text="Tên dịch vụ:" Width="100" VerticalAlignment="Center"/>
                <TextBox x:Name="NameTextBox" Width="220"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock Text="Đơn vị tính:" Width="100" VerticalAlignment="Center"/>
                <TextBox x:Name="UnitTextBox" Width="220"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock Text="Giá:" Width="100" VerticalAlignment="Center"/>
                <TextBox x:Name="PriceTextBox" Width="220"/>
            </StackPanel>
        </StackPanel>

        <Button Content="💾 Thêm" Width="100" Height="30"
                HorizontalAlignment="Right" Grid.Row="2"
                Click="AddButton_Click" Margin="0,20,0,0"/>
    </Grid>
</Window>
