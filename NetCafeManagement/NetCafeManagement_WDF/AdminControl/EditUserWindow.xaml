<Window x:Class="NetCafeManagement_WDF.AdminControl.EditUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Thêm người dùng" Height="300" Width="400"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="152.592"/>
            <RowDefinition Height="27.408"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Chỉnh sửa người dùng" FontSize="18" FontWeight="Bold" Margin="0,0,0,88"/>

        <StackPanel Orientation="Horizontal" Margin="0,65,0,70">
            <TextBlock Text="Tên:" Width="100"/>
            <TextBox x:Name="NameTextBox" Width="220"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Margin="2,100,-2,36">
            <TextBlock Text="SĐT:" Width="100"/>
            <TextBox x:Name="PhoneTextBox" Width="220"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Margin="2,135,-2,27" Grid.RowSpan="2">
            <TextBlock Text="Số dư:" Width="100" VerticalAlignment="Center"/>
            <TextBox x:Name="BalanceTextBox" Width="220"/>
        </StackPanel>

        <Button Content="💾 Lưu" Width="100" Height="30" Margin="229,10,0,-40"
                HorizontalAlignment="Left" Click="SaveButton_Click" Grid.Row="4"/>
    </Grid>
</Window>
