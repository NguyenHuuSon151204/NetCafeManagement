<Window x:Class="NetCafeManagement_WDF.AdminControl.AddComputerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Thêm máy trạm" Height="300" Width="400"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Thêm máy trạm mới" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>

        <StackPanel Orientation="Horizontal" Margin="0,10" Grid.Row="1">
            <TextBlock Text="Tên máy:" Width="100" VerticalAlignment="Center"/>
            <TextBox x:Name="NameTextBox" Width="220"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Margin="0,10" Grid.Row="2">
            <TextBlock Text="Hạng máy:" Width="100" VerticalAlignment="Center"/>
            <ComboBox x:Name="TierComboBox" Width="220">
                <ComboBoxItem Content="Basic"/>
                <ComboBoxItem Content="Duo"/>
                <ComboBoxItem Content="Premium"/>
            </ComboBox>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Margin="0,10" Grid.Row="3">
            <TextBlock Text="Giá/giờ (VNĐ):" Width="100" VerticalAlignment="Center"/>
            <TextBox x:Name="HourlyRateTextBox" Width="220"/>
        </StackPanel>

        <Button Content="💾 Thêm" Width="100" Height="30" Margin="0,10,0,0"
                HorizontalAlignment="Right" Click="AddButton_Click" Grid.Row="4"/>
    </Grid>
</Window>